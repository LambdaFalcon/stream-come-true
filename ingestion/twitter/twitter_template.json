{
  "template": "tweets",
  "order":    1,
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "tweet": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "created_at": {
          "type": "date"
        },
        "@timestamp": {
          "type": "date"
        },
        "text": {
          "type": "string"
        },
        "coordinates": {
          "properties": {
            "coordinates": {
              "type": "geo_point"
            }
          }
        },
          "followers_count": {
            "type": "long"
        }, 
          "tweet_id": {
            "type": "long"
        },
          "hashtags" : {
            "type" : "text"
        }, 
        "domain" : {
          "type" : "keyword"
        },
          "screen_name" : {
            "type" : "keyword"
        }, 
          "user_id" : {
            "type" : "long"
        },
        "user_image": {
          "type": "text"
        }
      }
    }
  }
}